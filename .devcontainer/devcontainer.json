{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"mounts": [
		{
			"type": "volume",
			"target": "${containerWorkspaceFolder}/.venv"
		},
		{
			"type": "volume",
			"target": "${containerWorkspaceFolder}/lib"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter"
			]
		}
	},
	"postCreateCommand": "sh setup.sh",
	"postStartCommand": ". .venv/bin/activate",
	"remoteUser": "root"
}